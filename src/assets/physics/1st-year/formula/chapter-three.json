{
  "chapter": "3. Forces and Motion",
  "formulas": [
    {
      "formula_math": "\\Delta x = x_f - x_0",
      "formula_english": "Displacement."
    },
    {
      "formula_math": "\\Delta t = t_f - t_0",
      "formula_english": "Time interval."
    },
    {
      "formula_math": "v = \\frac{\\Delta x}{\\Delta t}",
      "formula_english": "Average velocity."
    },
    {
      "formula_math": "a = \\frac{\\Delta v}{\\Delta t}",
      "formula_english": "Average acceleration."
    },
    {
      "formula_math": "x = x_0 + vt",
      "formula_english": "Uniform motion equation."
    },
    {
      "formula_math": "v = \\frac{v_0 + v}{2}",
      "formula_english": "Average velocity during uniform acceleration."
    },
    {
      "formula_math": "v = v_0 + at",
      "formula_english": "Velocity-time relation for constant acceleration."
    },
    {
      "formula_math": "x = x_0 + v_0 t + \\frac{1}{2} a t^2",
      "formula_english": "Position-time equation with constant acceleration."
    },
    {
      "formula_math": "v^2 = v_0^2 + 2a(x - x_0)",
      "formula_english": "Velocity-position relation without time."
    },
    {
      "formula_math": "g = 9.80 \\, m/s^2",
      "formula_english": "Acceleration due to gravity (keep formula only: value excluded)."
    },
    {
      "formula_math": "A_x = A \\cos \\theta",
      "formula_english": "Horizontal component of velocity or acceleration."
    },
    {
      "formula_math": "A_y = A \\sin \\theta",
      "formula_english": "Vertical component of velocity or acceleration."
    },
    {
      "formula_math": "v_x = v \\cos \\theta",
      "formula_english": "Horizontal component of velocity."
    },
    {
      "formula_math": "v_y = v \\sin \\theta",
      "formula_english": "Vertical component of velocity."
    },
    {
      "formula_math": "v = \\sqrt{v_x^2 + v_y^2}",
      "formula_english": "Magnitude of velocity in 2D motion."
    },
    {
      "formula_math": "\\theta = \\tan^{-1}\\left(\\frac{v_y}{v_x}\\right)",
      "formula_english": "Direction of velocity vector."
    },
    {
      "formula_math": "h = \\frac{v_{0y}^2}{2g}",
      "formula_english": "Maximum height of projectile motion.",
      "variants": [
        "v_{0y} = v_0 \\sin \\theta"
      ]
    },
    {
      "formula_math": "R = \\frac{v_0^2 \\sin 2\\theta_0}{g}",
      "formula_english": "Horizontal range of a projectile."
    }
  ]
}
