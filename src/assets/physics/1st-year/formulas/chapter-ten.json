{
  "chapter": "10. Thermodynamics",
  "formulas": [
    {
      "card_title": "First law of thermodynamics.",
      "card_math": "\\Delta U = Q - W"
    },
    {
      "card_title": "Work done by gas at constant pressure.",
      "card_math": "W = P \\Delta V"
    },
    {
      "card_title": "heat absorbed or released.",
      "card_math": "Q = mc\\Delta T"
    },
    {
      "card_title": "heat for phase change (fusion).",
      "card_math": "Q = mL_f",
      "card_other": [
        "L_f = latent heat of fusion"
      ]
    },
    {
      "card_title": "heat for phase change (vaporization).",
      "card_math": "Q = mL_v",
      "card_other": [
        "L_v = latent heat of vaporization"
      ]
    },
    {
      "card_title": "Ideal gas law.",
      "card_math": "PV = nRT"
    },
    {
      "card_title": "Boyle's law (isothermal process).",
      "card_math": "P_1 V_1 = P_2 V_2"
    },
    {
      "card_title": "Charles's law (isobaric process).",
      "card_math": "\\frac{V_1}{T_1} = \\frac{V_2}{T_2}"
    },
    {
      "card_title": "Gay-Lussac's law (isochoric process).",
      "card_math": "\\frac{P_1}{T_1} = \\frac{P_2}{T_2}"
    },
    {
      "card_title": "Adiabatic process.",
      "card_math": "PV^\\gamma = \\text{constant}"
    },
    {
      "card_title": "Alternative form of adiabatic relation.",
      "card_math": "TV^{\\gamma - 1} = \\text{constant}"
    },
    {
      "card_title": "Work in isothermal process.",
      "card_math": "W = nRT \\ln\\left(\\frac{V_f}{V_i}\\right)"
    },
    {
      "card_title": "Work in adiabatic process.",
      "card_math": "W = \\frac{nR(T_1 - T_2)}{\\gamma - 1}"
    },
    {
      "card_title": "Efficiency of heat engine.",
      "card_math": "\\eta = \\frac{W}{Q_h}"
    },
    {
      "card_title": "Efficiency in terms of heat.",
      "card_math": "\\eta = 1 - \\frac{Q_c}{Q_h}"
    },
    {
      "card_title": "Carnot efficiency.",
      "card_math": "\\eta_c = 1 - \\frac{T_c}{T_h}"
    },
    {
      "card_title": "Net work output of heat engine.",
      "card_math": "W = Q_h - Q_c"
    },
    {
      "card_title": "Coefficient of performance (refrigerator).",
      "card_math": "COP = \\frac{Q_c}{W}"
    },
    {
      "card_title": "Average kinetic energy per molecule.",
      "card_math": "KE_{avg} = \\frac{3}{2} kT"
    },
    {
      "card_title": "Root mean square speed of gas molecules.",
      "card_math": "v_{rms} = \\sqrt{\\frac{3RT}{M}}"
    }
  ]
}
