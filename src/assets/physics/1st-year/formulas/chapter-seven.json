{
  "chapter": "7. Oscillations",
  "formulas": [
    {
      "card_title": "Restoring force (Hooke's law).",
      "card_math": "F = -kx"
    },
    {
      "card_title": "Acceleration in simple harmonic motion.",
      "card_math": "a = -\\omega^2 x"
    },
    {
      "card_title": "Angular frequency of mass-spring system.",
      "card_math": "\\omega = \\sqrt{\\frac{k}{m}}"
    },
    {
      "card_title": "Period of mass-spring system.",
      "card_math": "T = 2\\pi \\sqrt{\\frac{m}{k}}"
    },
    {
      "card_title": "Frequency of mass-spring system.",
      "card_math": "f = \\frac{1}{2\\pi} \\sqrt{\\frac{k}{m}}"
    },
    {
      "card_title": "Displacement in SHM.",
      "card_math": "x = A \\cos(\\omega t + \\phi)"
    },
    {
      "card_title": "Velocity in SHM.",
      "card_math": "v = -A\\omega \\sin(\\omega t + \\phi)"
    },
    {
      "card_title": "Maximum velocity in SHM.",
      "card_math": "v_{max} = A\\omega"
    },
    {
      "card_title": "Acceleration in SHM.",
      "card_math": "a = -A\\omega^2 \\cos(\\omega t + \\phi)"
    },
    {
      "card_title": "Maximum acceleration in SHM.",
      "card_math": "a_{max} = A\\omega^2"
    },
    {
      "card_title": "Kinetic energy in SHM.",
      "card_math": "KE = \\frac{1}{2} m v^2 = \\frac{1}{2} m \\omega^2 (A^2 - x^2)"
    },
    {
      "card_title": "Potential energy in SHM.",
      "card_math": "PE = \\frac{1}{2} k x^2"
    },
    {
      "card_title": "Total energy in SHM.",
      "card_math": "E_{total} = \\frac{1}{2} k A^2"
    },
    {
      "card_title": "Period of simple pendulum.",
      "card_math": "T = 2\\pi \\sqrt{\\frac{l}{g}}"
    },
    {
      "card_title": "Angular frequency of simple pendulum.",
      "card_math": "\\omega = \\sqrt{\\frac{g}{l}}"
    }
  ]
}
