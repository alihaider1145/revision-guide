{
  "chapter": "8. Waves",
  "formulas": [
    {
      "card_title": "Wave equation.",
      "card_math": "v = f\\lambda"
    },
    {
      "card_title": "Period and frequency relation.",
      "card_math": "T = \\frac{1}{f}"
    },
    {
      "card_title": "Progressive wave equation.",
      "card_math": "y = A \\sin(kx - \\omega t)"
    },
    {
      "card_title": "Wave number.",
      "card_math": "k = \\frac{2\\pi}{\\lambda}"
    },
    {
      "card_title": "Angular frequency.",
      "card_math": "\\omega = 2\\pi f"
    },
    {
      "card_title": "Wave speed from angular quantities.",
      "card_math": "v = \\frac{\\omega}{k}"
    },
    {
      "card_title": "Speed of wave on a string.",
      "card_math": "v = \\sqrt{\\frac{T}{\\mu}}",
      "card_other": [
        "T = tension, \\mu = mass per unit length"
      ]
    },
    {
      "card_title": "Speed of longitudinal wave in solid.",
      "card_math": "v = \\sqrt{\\frac{E}{\\rho}}"
    },
    {
      "card_title": "Speed of sound in fluid.",
      "card_math": "v = \\sqrt{\\frac{B}{\\rho}}"
    },
    {
      "card_title": "Speed of sound in gas.",
      "card_math": "v = \\sqrt{\\frac{\\gamma P}{\\rho}}"
    },
    {
      "card_title": "Speed of sound in air at temperature tÂ°C.",
      "card_math": "v = 331 + 0.6t"
    },
    {
      "card_title": "Intensity of wave.",
      "card_math": "I = \\frac{P}{A}"
    },
    {
      "card_title": "Inverse square law for intensity.",
      "card_math": "I \\propto \\frac{1}{r^2}"
    },
    {
      "card_title": "Intensity in terms of amplitude.",
      "card_math": "I = 2\\pi^2 f^2 A^2 \\rho v"
    },
    {
      "card_title": "Sound intensity level in decibels.",
      "card_math": "\\beta = 10 \\log_{10} \\left(\\frac{I}{I_0}\\right)",
      "card_other": [
        "I_0 = 10^{-12} W/m^2"
      ]
    },
    {
      "card_title": "Resultant of two interfering waves.",
      "card_math": "y = 2A \\cos\\left(\\frac{\\phi}{2}\\right) \\sin(kx - \\omega t)"
    },
    {
      "card_title": "Frequencies of string fixed at both ends.",
      "card_math": "f_n = n\\frac{v}{2L}",
      "card_other": [
        "n = 1, 2, 3, ..."
      ]
    },
    {
      "card_title": "Frequencies of pipe closed at one end.",
      "card_math": "f_n = (2n-1)\\frac{v}{4L}",
      "card_other": [
        "n = 1, 2, 3, ..."
      ]
    },
    {
      "card_title": "Frequencies of pipe open at both ends.",
      "card_math": "f_n = n\\frac{v}{2L}",
      "card_other": [
        "n = 1, 2, 3, ..."
      ]
    },
    {
      "card_title": "Beat frequency.",
      "card_math": "f_b = |f_1 - f_2|"
    },
    {
      "card_title": "Doppler effect.",
      "card_math": "f' = f\\left(\\frac{v \\pm v_o}{v \\mp v_s}\\right)",
      "card_other": [
        "+ when observer/source approached",
        "- when observer/source receded"
      ]
    }
  ]
}
