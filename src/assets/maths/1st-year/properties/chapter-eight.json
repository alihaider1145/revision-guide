{
  "chapter": "Fundamentals of Trigonometry",
  "properties": [
    {
      "prop_eng": "Reciprocal identities",
      "prop_math": "sinθ = 1/cscθ,  cosθ = 1/secθ,  tanθ = 1/cotθ",
      "related": []
    },
    {
      "prop_eng": "Quotient identities",
      "prop_math": "tanθ = sinθ/cosθ,  cotθ = cosθ/sinθ",
      "related": []
    },
    {
      "prop_eng": "Pythagorean identities",
      "prop_math": "sin²θ + cos²θ = 1",
      "related": ["1 + tan²θ = sec²θ", "1 + cot²θ = csc²θ"]
    },
    {
      "prop_eng": "Co-function identities",
      "prop_math": "sin(90° − θ) = cosθ",
      "related": []
    },
    {
      "prop_eng": "Periodicity property",
      "prop_math": "sin(θ + 2π) = sinθ,  cos(θ + 2π) = cosθ",
      "related": []
    },
    {
      "prop_eng": "Even–odd nature of trigonometric functions",
      "prop_math": "sin(-θ) = -sinθ,  cos(-θ) = cosθ",
      "related": []
    }
  ]
}
