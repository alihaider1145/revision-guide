{
  "chapter": "Limit, Continuity and Derivative",
  "properties": [
    {
      "prop_eng": "Uniqueness of limit",
      "prop_math": "If lim_{x→a} f(x) exists, it is unique",
      "related": []
    },
    {
      "prop_eng": "Limit of sum",
      "prop_math": "lim_{x→a}[f(x) + g(x)] = lim_{x→a}f(x) + lim_{x→a}g(x)",
      "related": []
    },
    {
      "prop_eng": "Limit of product",
      "prop_math": "lim_{x→a}[f(x)g(x)] = lim_{x→a}f(x) · lim_{x→a}g(x)",
      "related": []
    },
    {
      "prop_eng": "Limit of quotient",
      "prop_math": "lim_{x→a}\\frac{f(x)}{g(x)} = \\frac{lim_{x→a}f(x)}{lim_{x→a}g(x)}",
      "conditions": "lim g(x) ≠ 0",
      "related": []
    },
    {
      "prop_eng": "Continuity criteria",
      "prop_math": "f(a) exists ∧ lim_{x→a}f(x) exists ∧ f(a)=lim_{x→a}f(x)",
      "related": []
    },
    {
      "prop_eng": "Differentiability implies continuity",
      "prop_math": "f'(a) exists ⇒ f is continuous at a",
      "related": []
    },
    {
      "prop_eng": "Derivative linearity",
      "prop_math": "d(af(x)+bg(x))/dx = a f'(x) + b g'(x)",
      "related": []
    },
    {
      "prop_eng": "Derivative of constant multiple",
      "prop_math": "d(kf(x))/dx = k f'(x)",
      "related": []
    }
  ]
}
