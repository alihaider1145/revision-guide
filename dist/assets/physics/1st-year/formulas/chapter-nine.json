{
  "chapter": "9. Physical Optics",
  "formulas": [
    {
      "formula_math": "c = f\\lambda",
      "formula_english": "Speed of light relation."
    },
    {
      "formula_math": "n = \\frac{c}{v}",
      "formula_english": "Refractive index."
    },
    {
      "formula_math": "\\lambda_n = \\frac{\\lambda}{n}",
      "formula_english": "Wavelength in a medium."
    },
    {
      "formula_math": "I = I_0 \\cos^2 \\theta",
      "formula_english": "Malus' law for polarized light."
    },
    {
      "formula_math": "\\tan \\theta_p = \\frac{n_2}{n_1}",
      "formula_english": "Brewster's angle.",
      "variants": [
        "\\theta_p = polarizing angle"
      ]
    },
    {
      "formula_math": "\\Delta x = \\frac{\\lambda D}{d}",
      "formula_english": "Fringe width in Young's double slit."
    },
    {
      "formula_math": "x_n = \\frac{n\\lambda D}{d}",
      "formula_english": "Position of bright fringes.",
      "variants": [
        "n = 0, 1, 2, 3, ..."
      ]
    },
    {
      "formula_math": "x_n = \\frac{(2n-1)\\lambda D}{2d}",
      "formula_english": "Position of dark fringes.",
      "variants": [
        "n = 1, 2, 3, ..."
      ]
    },
    {
      "formula_math": "\\Delta \\phi = \\frac{2\\pi}{\\lambda} \\times \\text{path difference}",
      "formula_english": "Phase difference from path difference."
    },
    {
      "formula_math": "d \\sin \\theta = n\\lambda",
      "formula_english": "Diffraction grating (principal maxima).",
      "variants": [
        "n = 0, 1, 2, 3, ..."
      ]
    },
    {
      "formula_math": "N = \\frac{1}{d}",
      "formula_english": "Number of lines per unit length on grating."
    },
    {
      "formula_math": "a \\sin \\theta = n\\lambda",
      "formula_english": "Single slit diffraction (minima).",
      "variants": [
        "a = slit width",
        "n = 1, 2, 3, ..."
      ]
    },
    {
      "formula_math": "\\theta = 1.22\\frac{\\lambda}{D}",
      "formula_english": "Rayleigh criterion for resolution."
    },
    {
      "formula_math": "R = \\frac{\\lambda}{\\Delta \\lambda} = nN",
      "formula_english": "Resolving power of diffraction grating."
    },
    {
      "formula_math": "2t = (m + \\frac{1}{2})\\lambda",
      "formula_english": "Constructive interference in thin films.",
      "variants": [
        "m = 0, 1, 2, 3, ..."
      ]
    },
    {
      "formula_math": "2t = m\\lambda",
      "formula_english": "Destructive interference in thin films.",
      "variants": [
        "m = 0, 1, 2, 3, ..."
      ]
    },
    {
      "formula_math": "2\\mu t \\cos r = n\\lambda",
      "formula_english": "Thin film interference with oblique incidence."
    }
  ]
}