{
  "chapter": "5. Circular Motion",
  "formulas": [
    {
      "card_title": "Angular displacement defined as arc length divided by radius.",
      "card_math": "\\theta = \\frac{s}{r}"
    },
    {
      "card_title": "Angular velocity.",
      "card_math": "\\omega = \\frac{\\theta}{t}"
    },
    {
      "card_title": "Angular velocity in terms of period.",
      "card_math": "\\omega = \\frac{2\\pi}{T}"
    },
    {
      "card_title": "Angular velocity in terms of frequency.",
      "card_math": "\\omega = 2\\pi f"
    },
    {
      "card_title": "Linear velocity in circular motion.",
      "card_math": "v = r\\omega"
    },
    {
      "card_title": "Centripetal acceleration.",
      "card_math": "a_c = \\frac{v^2}{r}"
    },
    {
      "card_title": "Centripetal acceleration in angular form.",
      "card_math": "a_c = r\\omega^2"
    },
    {
      "card_title": "Centripetal force.",
      "card_math": "F_c = \\frac{mv^2}{r}"
    },
    {
      "card_title": "Centripetal force in angular form.",
      "card_math": "F_c = mr\\omega^2"
    },
    {
      "card_title": "Banking angle for circular motion.",
      "card_math": "\\tan \\theta = \\frac{v^2}{rg}"
    },
    {
      "card_title": "Period of simple pendulum.",
      "card_math": "T = 2\\pi \\sqrt{\\frac{l}{g}}"
    },
    {
      "card_title": "Angular acceleration.",
      "card_math": "\\alpha = \\frac{\\Delta \\omega}{\\Delta t}"
    },
    {
      "card_title": "Angular velocity with constant angular acceleration.",
      "card_math": "\\omega_f = \\omega_i + \\alpha t"
    },
    {
      "card_title": "Angular displacement with constant angular acceleration.",
      "card_math": "\\theta = \\omega_i t + \\frac{1}{2} \\alpha t^2"
    },
    {
      "card_title": "Angular velocity-displacement relation.",
      "card_math": "\\omega_f^2 = \\omega_i^2 + 2\\alpha \\theta"
    },
    {
      "card_title": "Tangential acceleration.",
      "card_math": "a_t = r\\alpha"
    },
    {
      "card_title": "Torque.",
      "card_math": "\\tau = r F \\sin \\theta"
    },
    {
      "card_title": "Rotational form of Newton's second law.",
      "card_math": "\\tau = I \\alpha"
    },
    {
      "card_title": "Moment of inertia (discrete masses).",
      "card_math": "I = \\sum m_i r_i^2"
    },
    {
      "card_title": "Rotational kinetic energy.",
      "card_math": "KE_{rot} = \\frac{1}{2} I \\omega^2"
    },
    {
      "card_title": "Angular momentum.",
      "card_math": "L = I\\omega"
    },
    {
      "card_title": "Angular momentum of a particle equal to the product of radius vector magnitude and linear momentum (for perpendicular velocity).",
      "card_math": "L = rp"
    },
    {
      "card_title": "Torque as rate of change of angular momentum.",
      "card_math": "\\tau = \\frac{\\Delta L}{\\Delta t}"
    },
    {
      "card_title": "Work done in rotational motion.",
      "card_math": "W = \\tau \\theta"
    },
    {
      "card_title": "Power in rotational motion.",
      "card_math": "P = \\tau \\omega"
    },
    {
      "card_title": "Orbital velocity of satellite.",
      "card_math": "v_s = \\sqrt{\\frac{GM}{r}}"
    },
    {
      "card_title": "Orbital period.",
      "card_math": "T = 2\\pi \\sqrt{\\frac{r^3}{GM}}"
    }
  ]
}
