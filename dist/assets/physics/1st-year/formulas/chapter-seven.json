{
  "chapter": "7. Oscillations",
  "formulas": [
    {
      "formula_math": "F = -kx",
      "formula_english": "Restoring force (Hooke's law)."
    },
    {
      "formula_math": "a = -\\omega^2 x",
      "formula_english": "Acceleration in simple harmonic motion."
    },
    {
      "formula_math": "\\omega = \\sqrt{\\frac{k}{m}}",
      "formula_english": "Angular frequency of mass-spring system."
    },
    {
      "formula_math": "T = 2\\pi \\sqrt{\\frac{m}{k}}",
      "formula_english": "Period of mass-spring system."
    },
    {
      "formula_math": "f = \\frac{1}{2\\pi} \\sqrt{\\frac{k}{m}}",
      "formula_english": "Frequency of mass-spring system."
    },
    {
      "formula_math": "x = A \\cos(\\omega t + \\phi)",
      "formula_english": "Displacement in SHM."
    },
    {
      "formula_math": "v = -A\\omega \\sin(\\omega t + \\phi)",
      "formula_english": "Velocity in SHM."
    },
    {
      "formula_math": "v_{max} = A\\omega",
      "formula_english": "Maximum velocity in SHM."
    },
    {
      "formula_math": "a = -A\\omega^2 \\cos(\\omega t + \\phi)",
      "formula_english": "Acceleration in SHM."
    },
    {
      "formula_math": "a_{max} = A\\omega^2",
      "formula_english": "Maximum acceleration in SHM."
    },
    {
      "formula_math": "KE = \\frac{1}{2} m v^2 = \\frac{1}{2} m \\omega^2 (A^2 - x^2)",
      "formula_english": "Kinetic energy in SHM."
    },
    {
      "formula_math": "PE = \\frac{1}{2} k x^2",
      "formula_english": "Potential energy in SHM."
    },
    {
      "formula_math": "E_{total} = \\frac{1}{2} k A^2",
      "formula_english": "Total energy in SHM."
    },
    {
      "formula_math": "T = 2\\pi \\sqrt{\\frac{l}{g}}",
      "formula_english": "Period of simple pendulum."
    },
    {
      "formula_math": "\\omega = \\sqrt{\\frac{g}{l}}",
      "formula_english": "Angular frequency of simple pendulum."
    },
    {
      "formula_math": "x = Ae^{-bt/2m} \\cos(\\omega' t)",
      "formula_english": "Damped harmonic motion.",
      "variants": [
        "b = damping constant"
      ]
    },
    {
      "formula_math": "A = \\frac{F_0}{m\\sqrt{(\\omega_0^2 - \\omega^2)^2 + (b\\omega/m)^2}}",
      "formula_english": "Amplitude in forced oscillations."
    },
    {
      "formula_math": "\\omega_r = \\sqrt{\\omega_0^2 - \\frac{b^2}{2m^2}}",
      "formula_english": "Resonance frequency."
    }
  ]
}