{
  "chapter": "16. Physics of Solids",
  "formulas": [
    {
      "formula_math": "\\sigma = \\frac{F}{A}",
      "formula_english": "Stress (tensile or compressive)."
    },
    {
      "formula_math": "\\varepsilon = \\frac{\\Delta L}{L}",
      "formula_english": "Strain (longitudinal)."
    },
    {
      "formula_math": "Y = \\frac{\\sigma}{\\varepsilon} = \\frac{FL}{A\\Delta L}",
      "formula_english": "Young's modulus."
    },
    {
      "formula_math": "K = -\\frac{\\Delta P}{\\Delta V / V}",
      "formula_english": "Bulk modulus."
    },
    {
      "formula_math": "K = -V \\frac{dP}{dV}",
      "formula_english": "Bulk modulus (differential form)."
    },
    {
      "formula_math": "G = \\frac{\\tau}{\\gamma}",
      "formula_english": "Shear modulus (rigidity modulus)."
    },
    {
      "formula_math": "\\tau = \\frac{F}{A}",
      "formula_english": "Shear stress."
    },
    {
      "formula_math": "\\gamma = \\frac{\\Delta x}{h}",
      "formula_english": "Shear strain."
    },
    {
      "formula_math": "U = \\frac{1}{2} \\times \\text{stress} \\times \\text{strain} \\times V",
      "formula_english": "Elastic potential energy."
    },
    {
      "formula_math": "U = \\frac{1}{2} \\frac{F \\Delta L}{V}",
      "formula_english": "Energy stored per unit volume."
    },
    {
      "formula_math": "\\nu = -\\frac{\\text{lateral strain}}{\\text{longitudinal strain}}",
      "formula_english": "Poisson's ratio."
    },
    {
      "formula_math": "Y = 2G(1 + \\nu)",
      "formula_english": "Relation between Y, G, and Poisson's ratio."
    },
    {
      "formula_math": "Y = 3K(1 - 2\\nu)",
      "formula_english": "Relation between Y, K, and Poisson's ratio."
    },
    {
      "formula_math": "n = \\frac{N}{V}",
      "formula_english": "Number density of charge carriers."
    },
    {
      "formula_math": "\\rho = \\frac{m}{\\tau e^2 n}",
      "formula_english": "Resistivity in terms of carrier density."
    },
    {
      "formula_math": "E_g = E_C - E_V",
      "formula_english": "Energy band gap."
    }
  ]
}