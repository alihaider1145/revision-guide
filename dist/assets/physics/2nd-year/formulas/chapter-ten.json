{
  "chapter": "20. Nuclear Physics",
  "formulas": [
    {
      "formula_math": "R = R_0 A^{1/3}",
      "formula_english": "Nuclear radius.",
      "variants": [
        "R_0 = 1.2 \\times 10^{-15} m"
      ]
    },
    {
      "formula_math": "\\rho = \\frac{3m_p}{4\\pi R_0^3}",
      "formula_english": "Nuclear density."
    },
    {
      "formula_math": "\\Delta m = (Zm_p + Nm_n) - M_{nucleus}",
      "formula_english": "Mass defect."
    },
    {
      "formula_math": "E_b = \\Delta m c^2",
      "formula_english": "Binding energy."
    },
    {
      "formula_math": "\\frac{E_b}{A}",
      "formula_english": "Binding energy per nucleon."
    },
    {
      "formula_math": "1 \\text{ amu} = 931.5 \\text{ MeV/c}^2",
      "formula_english": "Atomic mass unit conversion."
    },
    {
      "formula_math": "N = N_0 e^{-\\lambda t}",
      "formula_english": "Radioactive decay law."
    },
    {
      "formula_math": "A = A_0 e^{-\\lambda t}",
      "formula_english": "Activity decay."
    },
    {
      "formula_math": "A = \\lambda N",
      "formula_english": "Activity definition."
    },
    {
      "formula_math": "T_{1/2} = \\frac{0.693}{\\lambda}",
      "formula_english": "Half-life relation."
    },
    {
      "formula_math": "\\lambda = \\frac{\\ln 2}{T_{1/2}}",
      "formula_english": "Decay constant from half-life."
    },
    {
      "formula_math": "N = N_0 \\left(\\frac{1}{2}\\right)^{t/T_{1/2}}",
      "formula_english": "Decay in terms of half-life."
    },
    {
      "formula_math": "N = N_0 2^{-n}",
      "formula_english": "After n half-lives.",
      "variants": [
        "n = t/T_{1/2}"
      ]
    },
    {
      "formula_math": "t_{avg} = \\frac{T_{1/2}}{0.693} = \\frac{1}{\\lambda}",
      "formula_english": "Average (mean) life."
    },
    {
      "formula_math": "Q = (m_i - m_f)c^2",
      "formula_english": "Q-value of nuclear reaction."
    },
    {
      "formula_math": "Q = \\Delta BE",
      "formula_english": "Q-value from binding energy change."
    },
    {
      "formula_math": "E = hf = \\frac{hc}{\\lambda}",
      "formula_english": "Gamma ray energy."
    },
    {
      "formula_math": "KE = \\frac{1}{2}mv^2",
      "formula_english": "Kinetic energy of particles."
    },
    {
      "formula_math": "\\frac{dN}{dt} = -\\lambda N",
      "formula_english": "Rate of decay."
    }
  ]
}