{
  "chapter": "Numerical Methods",
  "equations": [
    {
      "eq_eng": "Forward difference operator",
      "eq_math": "Δf(x) = f(x+h) - f(x)",
      "related": []
    },
    {
      "eq_eng": "Backward difference operator",
      "eq_math": "∇f(x) = f(x) - f(x-h)",
      "related": []
    },
    {
      "eq_eng": "Newton’s forward interpolation formula",
      "eq_math": "f(x) = f(x₀) + pΔf(x₀) + \\frac{p(p-1)}{2!}Δ²f(x₀) + ...",
      "conditions": "p = (x - x₀)/h",
      "related": []
    },
    {
      "eq_eng": "Newton’s backward interpolation formula",
      "eq_math": "f(x) = f(xₙ) + p∇f(xₙ) + \\frac{p(p+1)}{2!}∇²f(xₙ) + ...",
      "conditions": "p = (x - xₙ)/h",
      "related": []
    },
    {
      "eq_eng": "Numerical differentiation",
      "eq_math": "f'(x) ≈ \\frac{f(x+h) - f(x)}{h}",
      "related": []
    },
    {
      "eq_eng": "Trapezoidal rule",
      "eq_math": "∫_a^b f(x)dx ≈ \\frac{h}{2}[f(a) + 2Σf(x_i) + f(b)]",
      "related": []
    },
    {
      "eq_eng": "Simpson’s 1/3 rule",
      "eq_math": "∫_a^b f(x)dx ≈ \\frac{h}{3}[f(a) + 4f(x_1) + 2f(x_2) + ... + f(b)]",
      "conditions": "Number of intervals must be even",
      "related": []
    }
  ]
}
