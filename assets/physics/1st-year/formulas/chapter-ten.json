{
  "chapter": "10. Thermodynamics",
  "formulas": [
    {
      "formula_math": "\\Delta U = Q - W",
      "formula_english": "First law of thermodynamics."
    },
    {
      "formula_math": "W = P \\Delta V",
      "formula_english": "Work done by gas at constant pressure."
    },
    {
      "formula_math": "Q = mc\\Delta T",
      "formula_english": "Heat absorbed or released."
    },
    {
      "formula_math": "Q = mL_f",
      "formula_english": "Heat for phase change (fusion).",
      "variants": [
        "L_f = latent heat of fusion"
      ]
    },
    {
      "formula_math": "Q = mL_v",
      "formula_english": "Heat for phase change (vaporization).",
      "variants": [
        "L_v = latent heat of vaporization"
      ]
    },
    {
      "formula_math": "PV = nRT",
      "formula_english": "Ideal gas law."
    },
    {
      "formula_math": "P_1 V_1 = P_2 V_2",
      "formula_english": "Boyle's law (isothermal process)."
    },
    {
      "formula_math": "\\frac{V_1}{T_1} = \\frac{V_2}{T_2}",
      "formula_english": "Charles's law (isobaric process)."
    },
    {
      "formula_math": "\\frac{P_1}{T_1} = \\frac{P_2}{T_2}",
      "formula_english": "Gay-Lussac's law (isochoric process)."
    },
    {
      "formula_math": "PV^\\gamma = \\text{constant}",
      "formula_english": "Adiabatic process."
    },
    {
      "formula_math": "TV^{\\gamma - 1} = \\text{constant}",
      "formula_english": "Alternative form of adiabatic relation."
    },
    {
      "formula_math": "W = nRT \\ln\\left(\\frac{V_f}{V_i}\\right)",
      "formula_english": "Work in isothermal process."
    },
    {
      "formula_math": "W = \\frac{nR(T_1 - T_2)}{\\gamma - 1}",
      "formula_english": "Work in adiabatic process."
    },
    {
      "formula_math": "\\eta = \\frac{W}{Q_h}",
      "formula_english": "Efficiency of heat engine."
    },
    {
      "formula_math": "\\eta = 1 - \\frac{Q_c}{Q_h}",
      "formula_english": "Efficiency in terms of heat."
    },
    {
      "formula_math": "\\eta_c = 1 - \\frac{T_c}{T_h}",
      "formula_english": "Carnot efficiency."
    },
    {
      "formula_math": "W = Q_h - Q_c",
      "formula_english": "Net work output of heat engine."
    },
    {
      "formula_math": "COP = \\frac{Q_c}{W}",
      "formula_english": "Coefficient of performance (refrigerator)."
    },
    {
      "formula_math": "KE_{avg} = \\frac{3}{2} kT",
      "formula_english": "Average kinetic energy per molecule."
    },
    {
      "formula_math": "v_{rms} = \\sqrt{\\frac{3RT}{M}}",
      "formula_english": "Root mean square speed of gas molecules."
    }
  ]
}