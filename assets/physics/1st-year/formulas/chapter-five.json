{
  "chapter": "5. Circular Motion",
  "formulas": [
    {
      "formula_math": "\\omega = \\frac{\\theta}{t}",
      "formula_english": "Angular velocity."
    },
    {
      "formula_math": "\\omega = \\frac{2\\pi}{T}",
      "formula_english": "Angular velocity in terms of period."
    },
    {
      "formula_math": "\\omega = 2\\pi f",
      "formula_english": "Angular velocity in terms of frequency."
    },
    {
      "formula_math": "v = r\\omega",
      "formula_english": "Linear velocity in circular motion."
    },
    {
      "formula_math": "a_c = \\frac{v^2}{r}",
      "formula_english": "Centripetal acceleration."
    },
    {
      "formula_math": "a_c = r\\omega^2",
      "formula_english": "Centripetal acceleration in angular form."
    },
    {
      "formula_math": "F_c = \\frac{mv^2}{r}",
      "formula_english": "Centripetal force."
    },
    {
      "formula_math": "F_c = mr\\omega^2",
      "formula_english": "Centripetal force in angular form."
    },
    {
      "formula_math": "\\tan \\theta = \\frac{v^2}{rg}",
      "formula_english": "Banking angle for circular motion."
    },
    {
      "formula_math": "T = 2\\pi \\sqrt{\\frac{l}{g}}",
      "formula_english": "Period of simple pendulum."
    },
    {
      "formula_math": "T = 2\\pi \\sqrt{\\frac{r}{g}}",
      "formula_english": "Period of conical pendulum."
    },
    {
      "formula_math": "\\alpha = \\frac{\\Delta \\omega}{\\Delta t}",
      "formula_english": "Angular acceleration."
    },
    {
      "formula_math": "\\omega_f = \\omega_i + \\alpha t",
      "formula_english": "Angular velocity with constant angular acceleration."
    },
    {
      "formula_math": "\\theta = \\omega_i t + \\frac{1}{2} \\alpha t^2",
      "formula_english": "Angular displacement with constant angular acceleration."
    },
    {
      "formula_math": "\\omega_f^2 = \\omega_i^2 + 2\\alpha \\theta",
      "formula_english": "Angular velocity-displacement relation."
    },
    {
      "formula_math": "a_t = r\\alpha",
      "formula_english": "Tangential acceleration."
    },
    {
      "formula_math": "\\tau = r F \\sin \\theta",
      "formula_english": "Torque."
    },
    {
      "formula_math": "\\tau = I \\alpha",
      "formula_english": "Rotational form of Newton's second law."
    },
    {
      "formula_math": "I = \\sum m_i r_i^2",
      "formula_english": "Moment of inertia (discrete masses)."
    },
    {
      "formula_math": "KE_{rot} = \\frac{1}{2} I \\omega^2",
      "formula_english": "Rotational kinetic energy."
    },
    {
      "formula_math": "L = I\\omega",
      "formula_english": "Angular momentum."
    },
    {
      "formula_math": "\\tau = \\frac{\\Delta L}{\\Delta t}",
      "formula_english": "Torque as rate of change of angular momentum."
    },
    {
      "formula_math": "W = \\tau \\theta",
      "formula_english": "Work done in rotational motion."
    },
    {
      "formula_math": "P = \\tau \\omega",
      "formula_english": "Power in rotational motion."
    },
    {
      "formula_math": "v = \\sqrt{gr}",
      "formula_english": "Velocity at lowest point of vertical circle."
    },
    {
      "formula_math": "\\frac{T_1^2}{T_2^2} = \\frac{r_1^3}{r_2^3}",
      "formula_english": "Kepler's third law (ratio form)."
    },
    {
      "formula_math": "v_s = \\sqrt{\\frac{GM}{r}}",
      "formula_english": "Orbital velocity of satellite."
    },
    {
      "formula_math": "T = 2\\pi \\sqrt{\\frac{r^3}{GM}}",
      "formula_english": "Orbital period."
    }
  ]
}